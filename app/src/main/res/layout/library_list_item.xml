<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">

    <ImageView
            android:layout_width="50dp"
            android:layout_height="87.5dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/list_book_cover" android:layout_alignParentStart="true"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_toEndOf="@id/list_book_cover"
            android:layout_centerVertical="true" android:layout_marginStart="5dp">
        <TextView
                android:text="Title: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/list_book_title"
                android:layout_weight="1"/>
        <TextView
                android:text="Author: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/list_book_author"
                android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>