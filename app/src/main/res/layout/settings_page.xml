<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@drawable/blue_gradient"
                android:id="@+id/sp_main_layout">

    <TextView
            android:text="Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:layout_centerHorizontal="true" android:textSize="48sp"
            android:textStyle="bold"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_centerInParent="true"
            android:layout_marginStart="10dp" android:layout_marginEnd="10dp">
        <TextView
                android:text="Select app color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                android:textSize="24sp" android:layout_gravity="center_horizontal"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/color_select_row1"
                android:layout_marginTop="5dp" android:layout_marginBottom="5dp">
            <androidx.appcompat.widget.AppCompatButton
                    android:text="Red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/sp_red_but"
                    android:layout_weight="1" android:background="@drawable/button_style1"/>
            <androidx.appcompat.widget.AppCompatButton
                    android:text="Green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/sp_green_but"
                    android:layout_weight="1" android:background="@drawable/button_style1"
                    android:layout_marginStart="5dp" android:layout_marginEnd="5dp"/>
            <androidx.appcompat.widget.AppCompatButton
                    android:text="Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/sp_blue_but"
                    android:layout_weight="1" android:background="@drawable/button_style1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/color_select_row2"
        >
            <androidx.appcompat.widget.AppCompatButton
                    android:text="Orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/sp_orange_but"
                    android:layout_weight="1" android:background="@drawable/button_style1"
                    android:layout_marginEnd="5dp"/>
            <androidx.appcompat.widget.AppCompatButton
                    android:text="Purple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/sp_purple_but"
                    android:layout_weight="1" android:background="@drawable/button_style1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>